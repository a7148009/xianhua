/* 页面 */
page {
  height: 100%;
  background-color: #f5f5f5;
}

/* 容器 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  position: relative;
}

/* 内容区域 */
.content {
  width: 100%;
}

/* 区块 */
.section {
  background-color: #ffffff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.label.required::before {
  content: '*';
  color: #f74734;
  margin-right: 8rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.input:focus {
  background-color: #ffffff;
  border-color: #007aff;
}

.picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 48rpx 0 24rpx;
  font-size: 28rpx;
  color: #333333;
  border: 2rpx solid transparent;
  position: relative;
  transition: all 0.2s;
}

.picker::after {
  content: '▼';
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 20rpx;
  color: #999999;
  transition: transform 0.2s;
}

.picker-placeholder {
  color: #999999;
}

.picker:active {
  background-color: #eeeeee;
}

.picker:active::after {
  transform: translateY(-50%) rotate(180deg);
}

.textarea {
  width: 100%;
  min-height: 300rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.8;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.textarea:focus {
  background-color: #ffffff;
  border-color: #007aff;
}

.hint {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-top: 12rpx;
}

.char-count {
  display: block;
  font-size: 24rpx;
  color: #999999;
  text-align: right;
  margin-top: 12rpx;
}

/* 标签选择器 */
.tag-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.tag-item {
  padding: 16rpx 28rpx;
  background-color: #f8f8f8;
  border: 2rpx solid #e8e8e8;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #666666;
  transition: all 0.3s ease;
  position: relative;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.tag-text {
  flex-shrink: 0;
}

.tag-item.active {
  background-color: #1f618d;
  border-color: #1f618d;
  color: #ffffff;
  font-weight: 600;
  transform: scale(1.05);
  box-shadow: 0 4rpx 12rpx rgba(31, 97, 141, 0.3);
}

.tag-item.active .tag-text {
  color: #ffffff;
}

.check-icon {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: #52c41a;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  line-height: 32rpx;
  text-align: center;
}

/* 访问权限选择器 - 紧凑文字样式 */
.access-level-selector {
  display: flex;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.access-level-item {
  flex: 1;
  padding: 16rpx 28rpx;
  background-color: #f8f8f8;
  border: 2rpx solid #e8e8e8;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #666666;
  transition: all 0.3s ease;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.access-text {
  flex-shrink: 0;
}

.access-level-item.active {
  background-color: #1f618d;
  border-color: #1f618d;
  color: #ffffff;
  font-weight: 600;
  transform: scale(1.05);
  box-shadow: 0 4rpx 12rpx rgba(31, 97, 141, 0.3);
}

.access-level-item.active .access-text {
  color: #ffffff;
}

/* 价格输入组 */
.price-input-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.price-input {
  flex: 1;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.price-input:focus {
  background-color: #ffffff;
  border-color: #007aff;
}

.separator {
  font-size: 32rpx;
  color: #999999;
  font-weight: 600;
}

/* Logo上传 */
.logo-upload {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #d0d0d0;
  position: relative;
}

.logo-preview {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.logo-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999999;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 24rpx;
}

/* 地址输入组 */
.address-input-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.address-input {
  flex: 3;
}

.search-location-btn {
  flex: 1;
  height: 80rpx;
  background-color: #1f618d;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  min-width: 120rpx;
}

.search-location-btn::after {
  border: none;
}

.search-icon {
  font-size: 32rpx;
}

/* 位置按钮组 */
.location-buttons {
  display: flex;
  gap: 20rpx;
}

.location-btn {
  flex: 1;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #333333;
  border: 2rpx solid #e8e8e8;
  transition: all 0.2s;
}

.location-btn::after {
  border: none;
}

.location-btn:active {
  background-color: #e8e8e8;
}

.btn-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

/* 地图卡片 */
.map-card {
  margin-top: 24rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 地图容器 */
.map-container {
  width: 100%;
  height: 300rpx;
  position: relative;
  overflow: hidden;
}

.mini-map {
  width: 100%;
  height: 100%;
}

/* 固定在地图中心的定位图标 */
.map-center-marker {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -100%);
  z-index: 999;
  pointer-events: none;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 拖动时的动画效果 */
.map-center-marker.dragging {
  transform: translate(-50%, -120%);
}

.map-center-marker.dragging .center-marker-icon {
  transform: rotate(-45deg) scale(1.2);
}

.map-center-marker.dragging .center-marker-shadow {
  opacity: 0.6;
  transform: scale(0.8);
}

.center-marker-icon {
  width: 60rpx;
  height: 60rpx;
  display: block;
  position: relative;
  transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  transform: rotate(-45deg);

  /* 创建绿色水滴形状（类似原生地图标记） */
  background: linear-gradient(135deg, #34c759 0%, #30b350 100%);
  border-radius: 50% 50% 50% 0;
  box-shadow: 0 4rpx 8rpx rgba(52, 199, 89, 0.4);
}

/* 标记中心的白色圆点 */
.center-marker-icon::after {
  content: '';
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  background-color: #ffffff;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
  box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.2);
}

/* 定位图标阴影 */
.center-marker-shadow {
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 8rpx;
  background: radial-gradient(ellipse at center, rgba(0, 0, 0, 0.25) 0%, transparent 70%);
  border-radius: 50%;
  opacity: 0.8;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.map-info {
  padding: 24rpx;
  background-color: #fafafa;
}

.map-full-address {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: #1f618d;
  margin-bottom: 16rpx;
  line-height: 1.6;
  word-break: break-all;
}

.map-address {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #666666;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.map-coords {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

.map-placeholder {
  color: #999999;
  font-weight: 400;
}

.map-hint {
  display: block;
  font-size: 24rpx;
  color: #ff6b6b;
  margin-top: 8rpx;
}

.map-tip {
  display: block;
  font-size: 22rpx;
  color: #1f618d;
  margin-top: 12rpx;
  padding: 8rpx 12rpx;
  background-color: #e8f4f8;
  border-radius: 8rpx;
}

/* 图片上传 */
.image-upload-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 44rpx;
  height: 44rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 300;
}

.add-image-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  color: #999999;
}

.add-icon {
  font-size: 56rpx;
  font-weight: 300;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 24rpx;
}

/* 底部占位 */
.bottom-placeholder {
  height: 180rpx;
  flex-shrink: 0;
}

/* ✅ 采用测试页面的按钮样式（普通view，证明有效） ✅ */
.submit-button-container {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  width: 100%;
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 9999;
  box-sizing: border-box;
}

.submit-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #1f618d 0%, #154360 100%);
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(31, 97, 141, 0.4);
}
