/* 容器样式 */
.container {
	background-color: #f5f5f5;
	min-height: 100vh;
	padding-bottom: 120rpx;
}

/* 鲜花标题区域 */
.job-header {
	background-color: #ffffff;
	padding: 30rpx;
	border-bottom: 20rpx solid #f5f5f5;
}

/* 图片轮播 */
.job-images {
	margin: 20rpx 0;
}

.image-swiper {
	width: 100%;
	height: 400rpx;
	border-radius: 12rpx;
	overflow: hidden;
}

.swiper-image {
	width: 100%;
	height: 100%;
}
.job-title {
	font-size: 36rpx;
	font-weight: 600;
	color: #333333;
	line-height: 1.4;
	display: block;
	margin-bottom: 20rpx;
}
.job-salary {
	font-size: 40rpx;
	font-weight: 700;
	color: #f74734;
	display: block;
	margin-bottom: 20rpx;
}
.job-meta {
	display: flex;
	align-items: center;
	flex-wrap: wrap;
	font-size: 24rpx;
	color: #666666;
}
.location-icon {
	font-size: 20rpx;
	color: #ff4d4f;
	margin-right: 4rpx;
}
.meta-item {
	color: #666666;
}
.meta-separator {
	margin: 0 8rpx;
	color: #999999;
}
.meta-subtitle {
	color: #999999;
	margin-left: 4rpx;
}

/* 招聘人员信息 */
.recruiter-section {
	background-color: #ffffff;
	padding: 30rpx;
	border-bottom: 20rpx solid #f5f5f5;
}
.recruiter-info {
	display: flex;
	align-items: center;
	position: relative;
}
.recruiter-avatar {
	position: relative;
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	margin-right: 20rpx;
}
.avatar-img {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	color: #ffffff;
	font-size: 32rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}
.online-status {
	position: absolute;
	bottom: 0;
	right: 0;
	width: 20rpx;
	height: 20rpx;
	border-radius: 50%;
	background-color: #52c41a;
	border: 3rpx solid #ffffff;
}
.recruiter-details {
	flex: 1;
}
.recruiter-name {
	font-size: 28rpx;
	font-weight: 600;
	color: #333333;
	display: block;
	margin-bottom: 8rpx;
}
.company-name {
	font-size: 24rpx;
	color: #666666;
	display: block;
	margin-bottom: 4rpx;
}
/* 公司名称加粗样式 */
.company-name-bold {
	font-size: 26rpx;
	font-weight: 600;
	color: #333333;
	display: block;
	margin-bottom: 4rpx;
}
.company-meta {
	font-size: 22rpx;
	color: #999999;
	display: block;
}
.recruiter-tag {
	position: absolute;
	right: 0;
	top: -10rpx;
	background-color: #f0f8ff;
	border: 1rpx solid #007aff;
	border-radius: 20rpx;
	padding: 8rpx 16rpx;
}
.tag-text {
	font-size: 20rpx;
	color: #007aff;
}

/* 鲜花详情 */
.job-detail-section {
	background-color: #ffffff;
	padding: 30rpx;
	border-bottom: 20rpx solid #f5f5f5;
}
.section-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 20rpx;
}
.section-title {
	font-size: 30rpx;
	font-weight: 600;
	color: #333333;
}
.job-tags {
	display: flex;
	flex-wrap: wrap;
	margin-bottom: 15rpx;
}
.job-tag {
	padding: 12rpx 20rpx;
	background-color: #f0f8ff;
	border: 1rpx solid #007aff;
	border-radius: 20rpx;
	font-size: 24rpx;
	color: #007aff;
	margin-right: 16rpx;
	margin-bottom: 16rpx;
}
.job-description-title {
	font-size: 28rpx;
	font-weight: 600;
	color: #333333;
	display: block;
	margin-bottom: 10rpx;
}
.job-description {
	margin-bottom: 20rpx;
}
.desc-item-wrapper {
	margin-bottom: 4rpx;
}
.desc-item {
	font-size: 26rpx;
	color: #666666;
	font-weight: normal;
	line-height: 1.4;
	display: block;
	word-wrap: break-word;
	white-space: pre-wrap;
}
.desc-item.highlight {
	color: #007aff;
	font-weight: 600;
}

/* 费用公示 */
.fee-disclosure-section {
	background-color: #ffffff;
	padding: 30rpx;
	border-bottom: 20rpx solid #f5f5f5;
}
.fee-header {
	display: flex;
	align-items: center;
	margin-bottom: 20rpx;
}
.fee-icon {
	font-size: 32rpx;
	margin-right: 12rpx;
}
.fee-title {
	flex: 1;
	font-size: 28rpx;
	font-weight: 600;
	color: #333333;
}
.fee-questions {
	padding-left: 40rpx;
}
.fee-question {
	font-size: 24rpx;
	color: #999999;
	font-weight: normal;
	line-height: 1.5;
	display: block;
	margin-bottom: 12rpx;
}

/* 公司信息 */
.company-section {
	background-color: #ffffff;
	padding: 30rpx;
	border-bottom: 20rpx solid #f5f5f5;
}
.company-header {
	display: flex;
	align-items: center;
	margin-bottom: 20rpx;
}
.company-logo {
	width: 80rpx;
	height: 80rpx;
	border-radius: 12rpx;
	margin-right: 20rpx;
}
.logo-img {
	width: 80rpx;
	height: 80rpx;
	border-radius: 12rpx;
}
.logo-img-placeholder {
	width: 80rpx;
	height: 80rpx;
	border-radius: 12rpx;
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	color: #ffffff;
	font-size: 32rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}
.company-info {
	flex: 1;
}
.company-name {
	font-size: 28rpx;
	font-weight: 600;
	color: #333333;
	display: block;
	margin-bottom: 8rpx;
}
.company-scale {
	font-size: 24rpx;
	color: #999999;
}

/* 地图区域 */
.map-container {
	position: relative;
	height: 300rpx;
	border-radius: 12rpx;
	overflow: hidden;
	margin: 20rpx 0;
	border: 1rpx solid #e8e8e8;
}
.map {
	width: 100%;
	height: 100%;
}

/* 固定在地图中心的绿色水滴标记（显示商家位置） */
.map-center-marker {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -100%);
  z-index: 999;
  pointer-events: none;
}

.center-marker-icon {
  width: 60rpx;
  height: 60rpx;
  display: block;
  position: relative;
  transform: rotate(-45deg);

  /* 创建绿色水滴形状（类似原生地图标记） */
  background: linear-gradient(135deg, #34c759 0%, #30b350 100%);
  border-radius: 50% 50% 50% 0;
  box-shadow: 0 4rpx 8rpx rgba(52, 199, 89, 0.4);
}

/* 标记中心的白色圆点 */
.center-marker-icon::after {
  content: '';
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  background-color: #ffffff;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
  box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.2);
}

/* 定位图标阴影 */
.center-marker-shadow {
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 8rpx;
  background: radial-gradient(ellipse at center, rgba(0, 0, 0, 0.25) 0%, transparent 70%);
  border-radius: 50%;
  opacity: 0.8;
}

.map-control {
	position: absolute;
	bottom: 20rpx;
	right: 20rpx;
}
.map-btn {
	background-color: rgba(0, 0, 0, 0.7);
	color: #ffffff;
	padding: 12rpx 20rpx;
	border-radius: 20rpx;
	font-size: 22rpx;
}
.company-address {
	font-size: 26rpx;
	color: #333333;
	margin-top: 16rpx;
}

/* 安全保障 */
.safety-section {
	background-color: #ffffff;
	padding: 30rpx;
	border-bottom: 20rpx solid #f5f5f5;
}
.safety-header {
	display: flex;
	align-items: center;
	margin-bottom: 20rpx;
}
.safety-icon {
	font-size: 32rpx;
	margin-right: 12rpx;
}
.safety-title {
	font-size: 28rpx;
	font-weight: 600;
	color: #333333;
}
.safety-content {
	font-size: 24rpx;
	color: #666666;
	line-height: 1.6;
	margin-bottom: 20rpx;
}

/* 底部操作按钮 */
.bottom-actions {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	display: flex;
	background-color: #ffffff;
	padding: 20rpx;
	border-top: 1rpx solid #eeeeee;
	z-index: 999;
	box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.action-btn {
	flex: 1;
	height: 88rpx;
	text-align: center;
	border-radius: 18rpx;
	margin: 0 10rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border: none;
}

/* 分享按钮样式 */
.share-btn {
	background-color: #f5f5f5;
	color: #333333;
	border: 1rpx solid #e0e0e0;
	flex: 0.5; /* 分享按钮宽度缩短为一半 */
}
.share-btn::after {
	border: none;
}

/* 复制微信按钮样式 */
.chat-btn {
	background-color: #52c41a;
	color: #ffffff;
	flex: 1; /* 保持原有宽度 */
}

/* 拨打电话按钮样式 */
.call-btn {
	background-color: #1890ff;
	color: #ffffff;
	flex: 1; /* 保持原有宽度 */
}
.btn-icon {
	font-size: 28rpx;
	margin-right: 8rpx;
}
.btn-text {
	font-size: 28rpx;
	font-weight: 600;
}

/* 分享按钮文字颜色 */
.share-btn .btn-text {
	color: #333333;
}

/* 微信和电话按钮文字颜色 */
.chat-btn .btn-text,
.call-btn .btn-text {
	color: #ffffff;
}
