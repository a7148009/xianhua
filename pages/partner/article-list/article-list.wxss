/* pages/partner/article-list/article-list.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  color: #ffffff;
}

.page-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.page-meta {
  display: flex;
  gap: 30rpx;
  font-size: 24rpx;
  opacity: 0.9;
}

/* 推广链接按钮 */
.promotion-link-btn {
  margin-top: 20rpx;
  padding: 16rpx 24rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.3s;
}

.promotion-link-btn:active {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.3);
}

.promotion-link-btn .btn-icon {
  font-size: 32rpx;
}

.promotion-link-btn .btn-text {
  font-size: 26rpx;
  font-weight: 600;
}

/* 排序切换栏 */
.sort-switch-bar {
  background-color: #ffffff;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.sort-label {
  font-size: 26rpx;
  color: #666666;
  font-weight: 500;
}

.sort-tabs {
  flex: 1;
  display: flex;
  gap: 16rpx;
}

.sort-tab {
  flex: 1;
  padding: 16rpx 24rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666666;
  transition: all 0.3s;
}

.sort-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 文章列表 */
.article-list {
  padding: 20rpx;
}

/* 鲜花信息条目 - 完全照搬更多页面样式 */
.info-item {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #fffbf5 0%, #fff8f0 100%);
  border-radius: 16rpx;
  border: 2rpx dashed #ff9800;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.1);
  position: relative;
}

.info-item:last-child {
  margin-bottom: 0;
}

/* 鲜花信息标题行 */
.info-title {
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ffcc80;
}

/* 红色序号标签 */
.info-number {
  flex-shrink: 0;
  min-width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  border-radius: 12rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #ffffff;
  margin-right: 24rpx;
  padding: 0 12rpx;
  box-shadow: 0 6rpx 16rpx rgba(238, 90, 82, 0.4);
  border: 3rpx solid #ffffff;
}

/* 鲜花信息标题 */
.info-name {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #d84315;
  line-height: 1.5;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 鲜花信息详情文本 */
.info-detail {
  font-size: 30rpx;
  line-height: 2.2;
  color: #424242;
  margin-bottom: 12rpx;
  padding: 0;
  word-break: break-all;
}

.info-detail:last-child {
  margin-bottom: 0;
}

/* 审核状态标签 */
.review-status-tag {
  margin-top: 20rpx;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  text-align: center;
}

.review-status-tag.pending {
  background: linear-gradient(135deg, #faad14 0%, #ffc53d 100%);
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(250, 173, 20, 0.3);
}

.review-status-tag.approved {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.3);
}

.review-status-tag.rejected {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.3);
}

/* 加载状态 */
.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx 20rpx;
  font-size: 26rpx;
  color: #999999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-top: 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 32rpx;
}

.empty-action {
  padding: 16rpx 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 浮动发布按钮 */
.publish-fab {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  z-index: 999;
  transition: all 0.3s;
}

.publish-fab:active {
  transform: scale(0.9);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.5);
}

.fab-icon {
  font-size: 64rpx;
  font-weight: 300;
  color: #ffffff;
}
