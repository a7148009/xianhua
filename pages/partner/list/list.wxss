.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  background-color: #ffffff;
  border-radius: 44rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 页面列表 */
.page-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.page-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.page-cover {
  width: 100%;
  height: 300rpx;
  position: relative;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
  display: block;
}

.cover-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  font-size: 100rpx;
  opacity: 0.3;
}

.status-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 10rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #ffffff;
}

.status-tag.joined {
  background-color: #4caf50;
}

.status-tag.pending {
  background-color: #ff9800;
}

.page-info {
  padding: 30rpx;
}

.page-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.page-desc {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.page-meta {
  display: flex;
  gap: 30rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #999999;
}

/* 操作按钮 */
.page-actions {
  padding: 0 30rpx 30rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  text-align: center;
}

.action-btn::after {
  border: none;
}

.join-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.pending-btn {
  background-color: #fff3cd;
  color: #856404;
}

.joined-btn {
  background-color: #d4edda;
  color: #155724;
}

.action-btn:active {
  opacity: 0.8;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
  background-color: #ffffff;
  border-radius: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}
