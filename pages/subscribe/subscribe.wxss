/* 订阅页面 */
.subscribe-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f9ff 0%, #e0f2fe 50%, #ffffff 100%);
  padding: 20rpx;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

/* 顶部标题区 */
.header-section {
  text-align: center;
  padding: 60rpx 0 40rpx;
}

.header-title {
  font-size: 42rpx;
  font-weight: bold;
  color: #0c4a6e;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #64748b;
}

/* 关注方式区域 */
.methods-section {
  padding: 20rpx;
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0;
}

.title-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(90deg, transparent 0%, #cbd5e1 50%, transparent 100%);
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #0c4a6e;
  padding: 0 24rpx;
}

/* 方法卡片 */
.method-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid #e2e8f0;
}

.method-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx dashed #cbd5e1;
}

.method-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.method-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #0c4a6e;
}

/* 步骤列表 */
.method-steps {
  padding-left: 16rpx;
}

.step-item {
  display: flex;
  margin-bottom: 24rpx;
}

.step-item:last-child {
  margin-bottom: 0;
}

.step-number {
  flex-shrink: 0;
  width: 42rpx;
  height: 42rpx;
  background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(14, 165, 233, 0.3);
}

.step-content {
  flex: 1;
  padding-top: 4rpx;
}

.step-text {
  font-size: 28rpx;
  color: #334155;
  line-height: 1.8;
  margin-bottom: 12rpx;
}

/* 复制框 */
.copy-box {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 10rpx;
  padding: 16rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 2rpx dashed #f59e0b;
  margin-top: 10rpx;
}

.copy-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #92400e;
}

.copy-btn {
  font-size: 24rpx;
  color: #ffffff;
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  padding: 6rpx 20rpx;
  border-radius: 16rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(245, 158, 11, 0.3);
}

/* 二维码容器 */
.qrcode-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
  margin: 16rpx 0;
}

.qrcode-image {
  width: 340rpx;
  height: 340rpx;
  border-radius: 12rpx;
  background: #ffffff;
  padding: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.qrcode-tip {
  font-size: 22rpx;
  color: #0369a1;
  margin-top: 16rpx;
  background: #ffffff;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
}

/* 二维码占位符 */
.qrcode-placeholder {
  width: 340rpx;
  height: 340rpx;
  border-radius: 12rpx;
  background: #f1f5f9;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #cbd5e1;
}

.placeholder-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.placeholder-text {
  font-size: 24rpx;
  color: #64748b;
}

/* 订阅按钮 */
.subscribe-btn {
  width: 100%;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 16rpx 0;
  box-shadow: 0 8rpx 20rpx rgba(16, 185, 129, 0.3);
  border: none;
}

.subscribe-btn::after {
  border: none;
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
}

/* 提示信息 */
.method-tip {
  display: flex;
  align-items: flex-start;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 10rpx;
  padding: 16rpx;
  margin-top: 20rpx;
  border-left: 5rpx solid #f59e0b;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 24rpx;
  color: #92400e;
  line-height: 1.8;
}

