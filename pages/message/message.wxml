<view class="article-container">
  <view class="article-content">
    <!-- 招聘信息列表 -->
    <view wx:for="{{jobList}}" wx:key="index" class="job-item">
      <view class="job-title">
        <text class="job-number">{{item.number}}</text>
        <text class="job-name">{{item.title}}</text>
      </view>
      <view wx:for="{{item.details}}" wx:key="index" wx:for-item="detail" class="job-detail">
        {{detail}}
      </view>
    </view>
  </view>
</view>
