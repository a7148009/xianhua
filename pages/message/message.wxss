/* 页面容器 */
.article-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 10rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* 文章内容区域 */
.article-content {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  border: 2rpx dashed #ff9800;
}

/* 招聘条目 */
.job-item {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #fffbf5 0%, #fff8f0 100%);
  border-radius: 16rpx;
  border: 2rpx dashed #ff9800;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.1);
  position: relative;
}

.job-item:last-child {
  margin-bottom: 0;
}

/* 招聘标题行 */
.job-title {
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ffcc80;
}

/* 红色序号标签 */
.job-number {
  flex-shrink: 0;
  min-width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  border-radius: 12rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #ffffff;
  margin-right: 24rpx;
  padding: 0 12rpx;
  box-shadow: 0 6rpx 16rpx rgba(238, 90, 82, 0.4);
  border: 3rpx solid #ffffff;
}

/* 招聘职位名称 */
.job-name {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #d84315;
  line-height: 1.5;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 招聘详情文本 */
.job-detail {
  font-size: 30rpx;
  line-height: 2.2;
  color: #424242;
  margin-bottom: 12rpx;
  padding: 0;
  word-break: break-all;
}

.job-detail:last-child {
  margin-bottom: 0;
}
