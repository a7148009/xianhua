/* pages/partner/publish/publish.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx;
  color: #ffffff;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 发布模式选择 */
.mode-selector {
  display: flex;
  gap: 20rpx;
  margin: 20rpx;
}

.mode-item {
  flex: 1;
  background-color: #ffffff;
  border: 3rpx solid #e8e8e8;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.mode-item.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #f0f4ff 0%, #e8efff 100%);
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.mode-icon {
  font-size: 48rpx;
  line-height: 1;
}

.mode-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #333333;
}

.mode-item.active .mode-name {
  color: #667eea;
}

.mode-desc {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.mode-item.active .mode-desc {
  color: #667eea;
}

/* 表单区域 */
.form-section {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
  box-sizing: border-box;
}

.form-input:focus {
  background-color: #ffffff;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.form-textarea {
  width: 100%;
  min-height: 300rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.8;
  border: 2rpx solid transparent;
  transition: all 0.2s;
  box-sizing: border-box;
}

.form-textarea:focus {
  background-color: #ffffff;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

/* 图片上传 */
.image-upload {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 8rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.image-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 300;
}

.image-add {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  color: #999999;
}

.add-icon {
  font-size: 48rpx;
  font-weight: 300;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 24rpx;
}

.upload-progress {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #666666;
  text-align: center;
}

/* 排序位选择 */
.sort-section {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  margin-bottom: 24rpx;
}

.title-text {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.title-tip {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

.sort-grid {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 16rpx;
  max-height: 600rpx;
  overflow-y: auto;
  padding: 8rpx 0;
}

.sort-item {
  aspect-ratio: 1;
  background-color: #f8f8f8;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  transition: all 0.3s;
}

.sort-item.selected {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  border-color: #52c41a;
  transform: scale(1.05);
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.4);
}

.sort-item.disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

.sort-badge {
  font-size: 24rpx;
  font-weight: 700;
  color: #333333;
}

.sort-item.selected .sort-badge {
  color: #ffffff;
}

.sort-price {
  font-size: 20rpx;
  color: #f74734;
  font-weight: 600;
}

.sort-item.selected .sort-price {
  color: #ffffff;
}

.sort-occupied {
  font-size: 18rpx;
  color: #999999;
}

/* 已选信息 */
.selected-info {
  background: linear-gradient(135deg, #fff9e6 0%, #ffe4b3 100%);
  margin: 20rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid #ffd700;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
}

.info-value.price {
  font-size: 36rpx;
  color: #f74734;
  font-weight: 700;
}

.info-value.free {
  font-size: 32rpx;
  color: #52c41a;
  font-weight: 700;
}

.paid-badge {
  margin-top: 16rpx;
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: #ffffff;
  border-radius: 24rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.3);
}

/* 操作按钮 */
.action-bar {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx 20rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.action-btn::after {
  border: none;
}

.pay-btn {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  color: #333333;
}

.publish-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.publish-btn.disabled {
  background: #cccccc;
  color: #666666;
  box-shadow: none;
}

.publish-btn.full-width {
  flex: 1;
}

.action-btn:active {
  opacity: 0.85;
  transform: scale(0.98);
}

/* 提示信息 */
.tips-section {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 32rpx;
  line-height: 1;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}
