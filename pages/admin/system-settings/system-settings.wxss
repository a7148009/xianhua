/* pages/admin/system-settings.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头部样式 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e9ecef;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn .icon {
  font-size: 32rpx;
  color: #333333;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.placeholder {
  width: 60rpx;
}

/* 系统信息卡片 */
.info-section {
  padding: 30rpx;
}

.info-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.info-list {
  padding: 20rpx 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #666666;
}

.info-value {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

/* 设置菜单样式 */
.menu-section {
  padding: 0 30rpx 30rpx;
}

.menu-item {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: background-color 0.3s;
}

.menu-item:active {
  background-color: #f8f8f8;
}

.menu-icon {
  font-size: 40rpx;
  width: 60rpx;
  text-align: center;
  margin-right: 20rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 6rpx;
}

.menu-desc {
  font-size: 22rpx;
  color: #666666;
}

.menu-arrow {
  font-size: 24rpx;
  color: #999999;
}

/* 管理员信息样式 */
.admin-info {
  padding: 0 30rpx 30rpx;
}

.admin-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.admin-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.admin-details {
  flex: 1;
}

.admin-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.admin-role {
  font-size: 22rpx;
  color: #dc3545;
  background-color: rgba(220, 53, 69, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

/* 底部导航栏 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
}

.nav-item.active {
  background: rgba(255, 255, 255, 0.15);
}

.nav-item:active {
  background: rgba(255, 255, 255, 0.1);
  transform: scale(0.95);
}

.nav-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
  color: white;
}

.nav-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* TabBar 底部导航栏样式 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #ffffff;
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  z-index: 9999;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.08);
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 0;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
}

.tab-bar-item-active {
  transform: translateY(-4rpx);
}

.tab-bar-item-active::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
  border-radius: 0 0 6rpx 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 53, 0.4);
}

.tab-bar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.icon-emoji {
  font-size: 38rpx;
  line-height: 48rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  filter: grayscale(0.8);
}

.tab-bar-item-active .icon-emoji {
  transform: scale(1.15);
  filter: grayscale(0);
  text-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.tab-bar-text {
  font-size: 20rpx;
  line-height: 24rpx;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.tab-bar-item-active .tab-bar-text {
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(255, 107, 53, 0.2);
}