/* 页面 */
page {
  background-color: #f5f5f5;
}

/* 容器 */
.container {
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #ffd700 0%, #ff8c00 100%);
  padding: 40rpx;
  color: #ffffff;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 区块 */
.plans-section {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.add-btn {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #ffd700 0%, #ff8c00 100%);
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  color: #ffffff;
}

.add-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
  font-weight: bold;
}

.add-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 套餐列表 */
.plans-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.plan-card {
  background-color: #f8f8f8;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid #e8e8e8;
  transition: all 0.3s ease;
}

.plan-card:active {
  background-color: #f0f0f0;
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.plan-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.plan-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.action-btn.edit {
  background-color: #1890ff;
  color: #ffffff;
}

.action-btn.delete {
  background-color: #ff4d4f;
  color: #ffffff;
}

/* 套餐信息 */
.plan-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-row {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.info-label {
  color: #666666;
  margin-right: 12rpx;
  min-width: 120rpx;
}

.info-value {
  color: #333333;
  font-weight: 500;
}

.info-value.price {
  color: #ff6b35;
  font-size: 30rpx;
  font-weight: 700;
}

.info-value.save {
  color: #52c41a;
}

.info-value.badge {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8787 100%);
  color: #ffffff;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999999;
}

/* 保存按钮 */
.save-button-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 9999;
}

.save-button {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.4);
  transition: all 0.3s ease;
}

.save-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.3);
}

.button-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 80%;
  max-height: 80vh;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #666666;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.form-input:focus {
  background-color: #ffffff;
  border-color: #ffd700;
}

.modal-footer {
  display: flex;
  border-top: 2rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
}

.modal-btn.cancel {
  color: #666666;
  background-color: #f8f8f8;
}

.modal-btn.confirm {
  color: #ffffff;
  background: linear-gradient(135deg, #ffd700 0%, #ff8c00 100%);
  font-weight: 600;
}
