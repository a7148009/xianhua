/* 容器样式 - 完全照搬原项目 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* 搜索框样式 */
.search-container {
  background-color: #ffffff;
  padding: 20rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 40rpx;
  padding: 20rpx 30rpx;
  gap: 10rpx;
}

.search-icon {
  color: #999999;
  margin-right: 10rpx;
  font-size: 28rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.search-btn {
  background: #71476f !important;
  color: #ffffff !important;
  border: none !important;
  border-radius: 30rpx !important;
  padding: 0 20rpx !important;
  height: 56rpx !important;
  font-size: 26rpx !important;
  margin: 0 !important;
  line-height: 56rpx !important;
  white-space: nowrap !important;
  flex-shrink: 0 !important;
  min-width: 120rpx !important;
  width: 120rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.search-btn::after {
  border: none !important;
}

.clear-search-btn {
  background: #e8e8e8 !important;
  color: #333333 !important;
  border: 2rpx solid #cccccc !important;
  border-radius: 30rpx !important;
  padding: 0 20rpx !important;
  height: 56rpx !important;
  font-size: 26rpx !important;
  margin: 0 !important;
  line-height: 56rpx !important;
  white-space: nowrap !important;
  flex-shrink: 0 !important;
  min-width: 120rpx !important;
  width: 120rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.clear-search-btn::after {
  border: none !important;
}

/* 分类区域样式 */
.category-section {
  background-color: #ffffff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eeeeee;
}

.category-list {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.category-item {
  padding: 16rpx 32rpx;
  border-radius: 30rpx;
  border: 2rpx solid #f0f0f0;
  background-color: #ffffff;
  transition: all 0.3s ease;
}

.category-item.active {
  background-color: #FF6B35;
  border-color: #FF6B35;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.category-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #666666;
}

.category-item.active .category-text {
  color: #ffffff;
  font-weight: 600;
}

/* 地区分类样式 */
.area-list {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
  flex-wrap: wrap;
  padding: 0 30rpx;
}

.area-item {
  padding: 12rpx 24rpx;
  border-radius: 25rpx;
  border: 2rpx solid #e0e0e0;
  background-color: #ffffff;
  transition: all 0.3s ease;
  margin-right: 20rpx;
  margin-bottom: 12rpx;
}

.area-item.active {
  background-color: #FF6B35;
  border-color: #FF6B35;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.area-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
}

.area-item.active .area-text {
  color: #ffffff;
  font-weight: 600;
}

/* 多分类标签样式 */
.category-tags-inline {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-left: 10rpx;
}

.category-tag-item {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 8rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 6rpx rgba(102, 126, 234, 0.3);
}

/* 空状态样式 */
.category-empty,
.area-empty {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

/* 推荐板块样式 */
.recommendation-section {
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eeeeee;
  position: relative;
}

.rec-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.rec-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.rec-count {
  font-size: 24rpx;
  color: #999999;
}

.rec-tags {
  display: flex;
  align-items: center;
}

.rec-tag {
  background-color: #f8f8f8;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666666;
  margin-right: 20rpx;
  border: 1rpx solid transparent;
  height: 60rpx;
  padding: 0 24rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  white-space: nowrap;
}

.rec-tag.active {
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
  color: #ffffff;
  border-color: #FF6B35;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.rec-tag.location {
  background-color: #f0f8ff;
  color: #007aff;
  border: 1rpx solid #007aff;
  cursor: pointer;
  transition: all 0.3s ease;
}

.rec-tag.location.active {
  background: linear-gradient(135deg, #007aff 0%, #0056d2 100%);
  color: #ffffff;
  border-color: #007aff;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}

.rec-tag.filter {
  background-color: #f5f5f5;
  color: #333333;
  border-color: #dddddd;
}

.filter-text {
  margin-right: 4rpx;
}

.filter-icon {
  font-size: 20rpx;
  transform: translateY(-2rpx);
}

/* 距离筛选下拉菜单 */
.distance-filter-dropdown {
  position: absolute;
  top: 100%;
  right: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
  margin-top: 10rpx;
  overflow: hidden;
  animation: dropdown-fade-in 0.2s ease-out;
}

@keyframes dropdown-fade-in {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.distance-option {
  padding: 24rpx 40rpx;
  font-size: 28rpx;
  color: #333333;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.2s ease;
  min-width: 200rpx;
}

.distance-option:last-child {
  border-bottom: none;
}

.distance-option:active {
  background-color: #f8f8f8;
}

.distance-option.active {
  background-color: #fff5f0;
  color: #FF6B35;
  font-weight: 600;
}

/* 鲜花列表样式 */
.job-list {
  flex: 1;
  padding: 0 20rpx;
  overflow-y: auto;
  min-height: 400rpx;
  position: relative;
}

.job-item {
  background-color: #ffffff;
  margin: 20rpx 0;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f0f0f0;
}

/* 鲜花主要信息 */
.job-main {
  margin-bottom: 24rpx;
}

.job-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.job-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
  flex: 1;
  margin-right: 20rpx;
}

.job-salary-container {
  flex-shrink: 0;
}

.job-salary {
  font-size: 32rpx;
  font-weight: 700;
  color: #f74734;
}

.job-location-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}

.location-area {
  color: #666666;
}

.location-separator {
  margin: 0 8rpx;
  color: #999999;
}

.location-category {
  color: #666666;
}

/* 招聘人员信息 */
.recruiter-section {
  margin-bottom: 24rpx;
}

.recruiter-info {
  display: flex;
  align-items: center;
  position: relative;
}

.recruiter-avatar {
  position: relative;
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.avatar-placeholder {
  width: 60rpx;
  height: 60rpx;
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

/* VIP头像 - 金色渐变 */
.vip-avatar {
  background: linear-gradient(135deg, #ffd700 0%, #ff8c00 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 215, 0, 0.4);
}

/* 普通头像 - 紫色渐变 */
.normal-avatar {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.online-dot {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 16rpx;
  height: 16rpx;
  background-color: #52c41a;
  border-radius: 50%;
  border: 2rpx solid #ffffff;
}

.recruiter-details {
  flex: 1;
}

.recruiter-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 4rpx;
}

.company-name {
  font-size: 24rpx;
  color: #666666;
  display: block;
  margin-bottom: 4rpx;
}

/* 公司名称加粗样式 - 使用招聘负责人的样式 */
.company-name-bold {
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 4rpx;
}

.company-meta {
  font-size: 22rpx;
  color: #999999;
}

.action-area {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.publish-time-info {
  background-color: #f0f8ff;
  border: 1rpx solid #007aff;
  border-radius: 24rpx;
  padding: 7rpx 14rpx;
  font-size: 24rpx;
  color: #007aff;
  margin-bottom: 14rpx;
}

.call-button-rect {
  display: flex;
  align-items: center;
  background-color: #52c41a;
  border-radius: 24rpx;
  padding: 10rpx 19rpx;
  box-shadow: 0 5rpx 14rpx rgba(82, 196, 26, 0.3);
}

.call-icon-green {
  font-size: 24rpx;
  color: #ffffff;
  margin-right: 7rpx;
}

.call-text-rect {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 鲜花标签区域 */
.job-tags-section {
  margin-bottom: 24rpx;
}

.job-requirement-tags {
  display: flex;
  flex-wrap: wrap;
}

.req-tag {
  padding: 8rpx 16rpx;
  background-color: #f0f8ff;
  border: 1rpx solid #007aff;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #007aff;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

/* 鲜花描述预览 */
.job-description-preview {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
  margin-top: 20rpx;
}

.desc-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 12rpx;
}

.desc-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.desc-item {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;  /* 单行显示，超出显示省略号 */
  word-break: break-all;
}

/* 智能加载指示器 */
.smart-loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(245, 245, 245, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  border-radius: 16rpx;
}

.smart-loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 调试工具样式 */
.debug-trigger {
  position: fixed;
  top: 0;
  left: 0;
  width: 200rpx;
  height: 100rpx;
  z-index: 10000;
}

.debug-tools {
  position: fixed;
  bottom: 120rpx;
  right: 30rpx;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.85);
  border-radius: 12rpx;
  z-index: 9999;
}

.debug-title {
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
}

.debug-btn {
  margin-top: 12rpx;
  padding: 12rpx 24rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
  text-align: center;
}

/* ============================================
   骨架屏样式
   ============================================ */

.skeleton-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 搜索骨架 */
.skeleton-search {
  background-color: #ffffff;
  padding: 20rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.skeleton-box {
  width: 100%;
  height: 72rpx;
  background-color: #f0f0f0;
  border-radius: 40rpx;
}

/* 分类骨架 */
.skeleton-category {
  background-color: #ffffff;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.skeleton-category-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.skeleton-category-row:last-child {
  margin-bottom: 0;
}

.skeleton-tag {
  flex: 1;
  height: 60rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
}

/* 列表骨架 */
.skeleton-list {
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.skeleton-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.skeleton-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.skeleton-title {
  width: 60%;
  height: 40rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

.skeleton-price {
  width: 25%;
  height: 40rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

.skeleton-tags {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.skeleton-tag-small {
  width: 100rpx;
  height: 32rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
}

.skeleton-company {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.skeleton-avatar {
  width: 64rpx;
  height: 64rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
}

.skeleton-text {
  flex: 1;
  height: 32rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
}

/* 骨架屏动画 */
.skeleton-animate {
  background: linear-gradient(
    90deg,
    #f0f0f0 25%,
    #e8e8e8 50%,
    #f0f0f0 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 真实内容容器 */
.real-content {
  width: 100%;
}
