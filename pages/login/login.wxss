/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  box-sizing: border-box;
}

/* 头部区域 */
.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  animation: float 3s ease-in-out infinite;
}

.logo-svg {
  width: 200rpx;
  height: 200rpx;
  filter: drop-shadow(0 8rpx 24rpx rgba(255, 107, 157, 0.4));
}

/* Logo浮动动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-10rpx) rotate(5deg);
  }
}

/* 花瓣旋转动画 */
.petals {
  animation: rotate 20s linear infinite;
  transform-origin: 100px 100px;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.welcome-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 个人资料完善区域 */
.profile-section {
  width: 100%;
  max-width: 640rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx 36rpx;
  margin: 0 auto 40rpx;
  box-shadow: 0 12rpx 36rpx rgba(50, 50, 93, 0.1);
  box-sizing: border-box;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 更新提示 */
.update-tip {
  background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);
  border-left: 6rpx solid #667eea;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
}

.tip-text {
  color: #5e35b1;
  font-size: 26rpx;
  line-height: 1.5;
}

/* 头像设置 */
.avatar-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
  text-align: left;
}

.avatar-wrapper {
  position: relative;
  width: 180rpx !important;
  height: 180rpx !important;
  margin: 0 auto;
  border-radius: 50% !important;
  overflow: hidden;
  border: 4rpx solid #e0e0e0;
  background: #f4f6fb;
  padding: 0 !important;
  display: block;
}

.avatar-wrapper::after {
  content: '';
  display: block;
  padding-bottom: 100%;
}

.avatar {
  width: 180rpx !important;
  height: 180rpx !important;
  border-radius: 50% !important;
  display: block;
  object-fit: cover;
  position: absolute;
  top: 0;
  left: 0;
}

.avatar-edit-icon {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 56rpx;
  height: 56rpx;
  background: #667eea;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border: 4rpx solid #ffffff;
  box-sizing: border-box;
}

/* 昵称设置 */
.nickname-section {
  margin-bottom: 40rpx;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  box-sizing: border-box;
}

.nickname-input:focus {
  border-color: #667eea;
  background: #ffffff;
}

/* 完成按钮 */
.complete-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.complete-btn[disabled] {
  background: #cccccc;
  color: #999999;
}

/* 登录区域 */
.login-section {
  width: 100%;
  max-width: 640rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  border: none;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
}

.wx-login {
  background: #07c160;
  color: #ffffff;
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.btn-icon {
  font-size: 36rpx;
}

.btn-text {
  font-size: 32rpx;
}

/* 登录提示 */
.login-tips {
  margin: 30rpx 0;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  width: 100%;
}

.tips-text {
  display: block;
  color: rgba(255, 255, 255, 0.9);
  font-size: 24rpx;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.tips-text:last-child {
  margin-bottom: 0;
}

/* 底部说明 */
.footer {
  width: 100%;
  max-width: 640rpx;
  margin: auto auto 24rpx;
  text-align: center;
  padding-top: 40rpx;
}

.footer-text {
  color: rgba(255, 255, 255, 0.6);
  font-size: 22rpx;
}

.footer-link {
  color: rgba(255, 255, 255, 0.85);
  font-size: 22rpx;
  text-decoration: underline;
  margin: 0 8rpx;
}