.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.page-info-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  color: #ffffff;
}

.page-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.page-desc {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 20rpx;
}

.page-meta {
  display: flex;
  gap: 30rpx;
  font-size: 24rpx;
  opacity: 0.9;
}

.tab-bar {
  display: flex;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666666;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-weight: 600;
}

.member-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  gap: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.member-item:active {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.member-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background-color: #f0f0f0;
}

.member-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.member-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.member-meta {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

.member-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  flex-shrink: 0;
}

.action-btn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  text-align: center;
  box-sizing: border-box;
}

.action-btn::after {
  border: none;
}

.approve-btn {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.reject-btn {
  background: linear-gradient(135deg, #fa8c16 0%, #ffa940 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(250, 140, 22, 0.3);
}

.remove-btn {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.3);
}

.action-btn:active {
  opacity: 0.85;
  transform: scale(0.98);
}

.approve-btn:active {
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.4);
}

.reject-btn:active {
  box-shadow: 0 2rpx 8rpx rgba(250, 140, 22, 0.4);
}

.remove-btn:active {
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.4);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 合作信息列表 */
.article-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.article-review-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  gap: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.article-review-item:active {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.author-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background-color: #f0f0f0;
}

.article-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.article-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-preview {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999999;
}

.meta-author {
  color: #667eea;
  font-weight: 500;
}

.review-status {
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
  margin-left: auto;
}

.review-status.pending {
  background: linear-gradient(135deg, #faad14 0%, #ffc53d 100%);
  color: #ffffff;
}

.review-status.approved {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: #ffffff;
}

.review-status.rejected {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  color: #ffffff;
}
