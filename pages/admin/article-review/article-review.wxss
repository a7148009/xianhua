/* 容器 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 内容包装器 */
.content-wrapper {
  padding-bottom: 40rpx;
}

/* 鲜花信息条目 - 完全照搬更多页面样式 */
.info-item {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #fffbf5 0%, #fff8f0 100%);
  border-radius: 16rpx;
  border: 2rpx dashed #ff9800;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.1);
  position: relative;
}

/* 鲜花信息标题行 */
.info-title {
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ffcc80;
}

/* 红色序号标签 */
.info-number {
  flex-shrink: 0;
  min-width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  border-radius: 12rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #ffffff;
  margin-right: 24rpx;
  padding: 0 12rpx;
  box-shadow: 0 6rpx 16rpx rgba(238, 90, 82, 0.4);
  border: 3rpx solid #ffffff;
}

/* 鲜花信息标题 */
.info-name {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #d84315;
  line-height: 1.5;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 鲜花信息详情文本 */
.info-detail {
  font-size: 30rpx;
  line-height: 2.2;
  color: #424242;
  margin-bottom: 12rpx;
  padding: 0;
  word-break: break-all;
}

.info-detail:last-child {
  margin-bottom: 0;
}

/* 审核操作按钮 */
.review-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-btn {
  height: 96rpx;
  line-height: 96rpx;
  padding: 0;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.action-btn::after {
  border: none;
}

.approve-btn {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(82, 196, 26, 0.3);
}

.reject-btn {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(255, 77, 79, 0.3);
}

.action-btn:active {
  opacity: 0.85;
  transform: scale(0.98);
}
