/* 页面容器 */
page {
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  text-align: center;
}

/* 按钮组 */
.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.debug-btn {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 信息区块 */
.info-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 信息项 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
}

.value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
  word-break: break-all;
}

.full-width {
  display: block;
  width: 100%;
  margin-top: 12rpx;
  line-height: 1.6;
}

/* 信息组 */
.info-group {
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx dashed #e8e8e8;
}

.info-group:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.group-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 16rpx;
}

/* POI项 */
.poi-item {
  background-color: #f8f9ff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  border-left: 4rpx solid #667eea;
}

.poi-item:last-child {
  margin-bottom: 0;
}

.poi-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.poi-address {
  display: block;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.poi-distance {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

/* JSON数据框 */
.json-box {
  background-color: #2d2d2d;
  border-radius: 12rpx;
  padding: 24rpx;
  max-height: 800rpx;
  overflow-y: auto;
}

.json-text {
  font-size: 24rpx;
  color: #a9dc76;
  font-family: 'Courier New', Courier, monospace;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 日志框 */
.log-box {
  max-height: 600rpx;
  overflow-y: auto;
}

.log-item {
  display: flex;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.log-item:last-child {
  border-bottom: none;
}

.log-time {
  font-size: 24rpx;
  color: #999999;
  margin-right: 16rpx;
  flex-shrink: 0;
  font-family: 'Courier New', Courier, monospace;
}

.log-text {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.6;
  word-break: break-all;
  flex: 1;
}

/* 精度提示 */
.accuracy-tip {
  background-color: #fff3cd;
  border-left: 4rpx solid #ffc107;
  padding: 20rpx;
  border-radius: 8rpx;
  margin: 20rpx 0;
  display: flex;
  align-items: flex-start;
}

.accuracy-tip.success {
  background-color: #d4edda;
  border-left-color: #28a745;
}

.accuracy-tip.warning {
  background-color: #e7f3ff;
  border-left-color: #17a2b8;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
  white-space: pre-line;
  flex: 1;
}
