/* 页面 */
page {
  background-color: #f5f5f5;
}

/* 容器 */
.container {
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  padding: 40rpx;
  color: #ffffff;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 表单区块 */
.form-section,
.help-section,
.test-section {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-label.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 6rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
  box-sizing: border-box;
}

.form-input.password-input {
  padding-right: 80rpx;
}

.form-input:focus {
  background-color: #ffffff;
  border-color: #52c41a;
}

.password-toggle {
  position: absolute;
  right: 20rpx;
  top: 52rpx;
  width: 60rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.form-hint {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
  line-height: 1.5;
}

/* 单选组 */
.radio-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
}

.radio-item.active {
  background-color: #f6ffed;
  border-color: #52c41a;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.15);
}

.radio-icon {
  width: 44rpx;
  height: 44rpx;
  border: 3rpx solid #d9d9d9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  font-size: 24rpx;
  color: #ffffff;
  background-color: #ffffff;
  transition: all 0.3s ease;
}

.radio-item.active .radio-icon {
  border-color: #52c41a;
  background-color: #52c41a;
}

.radio-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.radio-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.radio-desc {
  font-size: 24rpx;
  color: #999999;
}

/* 开关行 */
.switch-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
}

.switch-label {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.switch-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.switch-desc {
  font-size: 24rpx;
  color: #999999;
}

.switch-control {
  transform: scale(1.2);
}

/* 帮助说明 */
.help-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.help-item {
  display: flex;
  align-items: flex-start;
}

.help-number {
  width: 44rpx;
  height: 44rpx;
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.help-text {
  flex: 1;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  padding-top: 6rpx;
}

/* 测试区块 */
.test-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.test-desc {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 24rpx;
  text-align: center;
}

.test-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
  transition: all 0.3s ease;
}

.test-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.2);
}

.test-btn-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 底部占位 */
.bottom-placeholder {
  height: 200rpx;
}

/* 保存按钮 */
.save-button-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 9999;
}

.save-button {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.4);
  transition: all 0.3s ease;
}

.save-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.3);
}

.button-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}
